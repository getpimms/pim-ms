{
  "manifest_version": 3,
  "name": "PIMMS",
  "description": "Bring revenue metrics to your email marketing software. Know how your email campaigns convert and how much revenue they bring.",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "icons/16/icon.png",
      "32": "icons/32/icon.png",
      "48": "icons/48/icon.png",
      "128": "icons/128/icon.png"
    }
  },
  "background": {
    "service_worker": "static/js/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["*://resend.com/*", "*://*.resend.com/*", "*://brevo.com/*", "*://*.brevo.com/*"],
      "all_frames": false,
      "run_at": "document_idle",
      "js": ["content-gate.js"]
    }
  ],
  "icons": {
    "16": "icons/16/icon.png",
    "32": "icons/32/icon.png",
    "48": "icons/48/icon.png",
    "128": "icons/128/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["fonts/*.woff2", "assets/*", "icons/*", "panel.css"],
      "matches": ["*://resend.com/*", "*://*.resend.com/*", "*://brevo.com/*", "*://*.brevo.com/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "offscreen",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "*://resend.com/*",
    "*://*.resend.com/*", 
    "*://brevo.com/*",
    "*://*.brevo.com/*",
    "*://localhost/*",
    "*://cbe.localhost/*",
    "*://app.pimms.io/*",
    "*://cbe.pimms.io/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://cbe.localhost/*", 
      "https://app.pimms.io/*",
      "https://cbe.pimms.io/*"
    ]
  }
}

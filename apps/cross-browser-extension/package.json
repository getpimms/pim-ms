{
  "name": "cross-browser-extension",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm build:css && craco build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf build",
    "dev": "pnpm build:css && (pnpm watch:css:public & pnpm watch:css:dev &) && PORT=4444 craco start",
    "build:css": "tailwindcss -c tailwind.config.js -i ./src/contentScript/styles.css -o ./public/panel.css --minify && mkdir -p ./dev && cp ./public/panel.css ./dev/panel.css",
    "watch:css:public": "CHOKIDAR_USEPOLLING=1 tailwindcss -c tailwind.config.js -i ./src/contentScript/styles.css -o ./public/panel.css --watch",
    "watch:css:dev": "CHOKIDAR_USEPOLLING=1 tailwindcss -c tailwind.config.js -i ./src/contentScript/styles.css -o ./dev/panel.css --watch"
  },
  "dependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "ahooks": "^3.9.0",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "crypto-browserify": "^3.12.1",
    "lucide-react": "0.539.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.5.0",
    "stream-browserify": "^3.0.0",
    "tailwind-merge": "^2.4.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@types/chrome": "^0.0.268",
    "autoprefixer": "^10.4.19",
    "copy-webpack-plugin": "^11.0.0",
    "postcss": "^8.4.38",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
